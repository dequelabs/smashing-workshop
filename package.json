{
  "name": "smashing-workshop",
  "version": "1.0.0",
  "description": "Building an accessible app",
  "repository": "git@github.com:dequelabs/smashing-workshop.git",
  "author": "Harris Schneiderman <harris.schneiderman@deque.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "parcel build src/index.html",
    "start": "parcel src/index.html --port 1234",
    "test": "jest"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {
        "browsers": [
          ">1%",
          "last 4 versions",
          "Firefox ESR",
          "not ie < 9"
        ],
        "flexbox": "no-2009"
      }
    }
  },
  "staticFiles": {
    "staticPath": "src/img"
  },
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>test-utils/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>test-utils/styleMock.js",
      "^.+\\.html$": "<rootDir>test-utils/htmlMock.js"
    }
  },
  "dependencies": {
    "cauldron-react": "^0.5.1",
    "delegate": "^3.2.0",
    "deque-pattern-library": "^4.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.5"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "autoprefixer": "^9.5.1",
    "axe-core": "^3.2.2",
    "babel-eslint": "^10.0.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "prettier": "^1.16.4",
    "react-axe": "^3.1.0",
    "wait-on": "^3.2.0"
  }
}
